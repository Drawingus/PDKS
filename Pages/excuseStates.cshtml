@page
@model ExcuseStatesModel
@{
    ViewData["Title"] = Model.lang["title"];
	var reqs = (List<ExcuseStatesModel.Data>)ViewData["Table"] ;
}

<!doctype html>
<html lang="en">
	<body>
		<div class="container">
			<table class="table table-striped table-bordered table-sm table-responsive-sm">
				<thead class="thead-dark">
					<tr>
						<th scope="col">#</th>
						<th scope="col">Id</th>
						<th scope="col">@Model.lang["date"]</th>
						<th scope="col">@Model.lang["excuse"]</th>
						<th scope="col">@Model.lang["request"]</th>
						<th scope="col">@Model.lang["response"]</th>
					</tr>
				</thead>
				<tbody>
					@if (reqs!=null){
						@for (int i=0;i<reqs.Count;i++)
						{
							<tr>
							<th scope="row">@(i+1)</th> 
							<td>@reqs[i].Id</td>
							<td>@reqs[i].Date</td>
							<td>@reqs[i].Excuse</td>
							<td>@reqs[i].Request</td>
							<td>@reqs[i].Response</td>
							</tr>
						}
					}
				</tbody>
			</table>
			<form method="POST">
				<div class="row justify-content-center">
					<input class="btn btn-primary btn-lg" name="button" type="submit" value="@Model.lang["goBack"]">
				</div>
			</form>
		</div>
	</body>
</html>