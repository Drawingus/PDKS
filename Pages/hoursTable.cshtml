@page
@model HoursTableModel
@{
    ViewData["Title"] = Model.lang["title"];
	var users = (List<HoursTableModel.Data>)ViewData["Table"] ;
}

<!doctype html>
<html lang="en">
	<body>
		<div class="container">
			<table class="table table-striped table-bordered table-sm table-responsive-sm">
				<thead class="thead-dark">
					<tr>
						<th scope="col">#</th>
						<th scope="col">Id</th>
						<th scope="col">@Model.lang["username"]</th>
						<th scope="col">@Model.lang["startHr"]</th>
						<th scope="col">@Model.lang["endHr"]</th>
						<th scope="col">@Model.lang["breakTime"]</th>
					</tr>
				</thead>
				<tbody>
					@if (users!=null){
						@for (int i=0;i<users.Count;i++)
						{
							<tr>
							<th scope="row">@(i+1)</th> 
							<td>@users[i].Id</td>
							<td>@users[i].Name</td>
							<td>@users[i].StartHr</td>
							<td>@users[i].EndHr</td>
							<td>@users[i].BreakTime</td>
							</tr>
						}
					}
				</tbody>
			</table>
			<form method="POST">
				<div class="row justify-content-center">
					<button class="btn btn-secondary btn-lg" type="submit" name="button" value="Go Back">@Model.lang["goBack"]</button>
				</div>
			</form>
		</div>
		<script>
		</script>
	</body>
</html>