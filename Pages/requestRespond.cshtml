@page
@model RequestRespondModel
@{
    ViewData["Title"] = Model.lang["title"];
	var users = (List<RequestRespondModel.Data>)ViewData["Table"] ;
}

<!doctype html>
<html lang="en">
	<body>
		<div class="container">
			<form method="POST">
			<div class="row justify-content-left">
				<h3>
					@Model.lang["goTableLbl"]
				</h3>
			</div>
			<div class="row justify-content-left m-3">
				<button class="btn btn-info btn-lg" type="submit" name="button" value='Check Requests'>@Model.lang["goTableBtn"]</button>
			</div>
			<div class="row justify-content-left">
				<h3>
					@Model.lang["selectLbl"]
				</h3>
			</div>
			<div class="row justify-content-left m-3">
				<select class="custom-select-sm" name="reqSelect" id="reqSelect">
					<option selected>@Model.lang["selectFirst"]</option>
					@if (users!=null){
						@for (int i=0;i<users.Count;i++)
						{	
							<option value=@users[i].Id>@users[i].UserId - @users[i].Name - @users[i].Id</option>
						}
					}
				</select>
			</div>
			<div class="row justify-content-left m-3">
				<input class="btn btn-primary btn-lg" type="submit" name="button" value='@Model.lang["accept"]'>
				<input class="btn btn-danger btn-lg" type="submit" name="button" value='@Model.lang["decline"]'>
			</div>
			<div class="row justify-content-left m-3">
				<button class="btn btn-secondary btn-lg" type="submit" name="button" value="Go Back">@Model.lang["goBack"]</button>
			</div>
			<div class="row justify-content-left m-3">
				<div class="col-xs">
					<div id="State">@Model.State</div>
				</div>
			</div>
			</form>
		</div>
		<script>
		</script>
	</body>
</html>